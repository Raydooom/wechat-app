<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="500">
  <block wx:for="{{imgUrls}}" wx:key="1">
    <swiper-item>
      <view><image src="{{item}}" class="slide-image" mode="aspectFill"></image></view>
      <view class="text-con">
        <text class='title'>旅行摄影</text>
        <text class='text'>描述：保持纵横比缩放图片，使图片的宽高完全拉伸至填满 image 元素</text>
        <text class='text'>拍摄地点：朝阳公园</text>
        <text class='text'>拍摄时间：2017-05-05</text>
      </view>
    </swiper-item>
  </block>
</swiper>