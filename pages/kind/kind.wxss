/* pages/kind/kind.wxss */

page {
  height: 100%;
  background: #222;
}

.kind {
  height: 100%;
  overflow: hidden;
}

.item {
  background: #fff;
  margin:10rpx 20rpx;
  border-radius: 2px;
  overflow: hidden;
  height:180rpx;
  display: flex;
}

.kind-img{
  width:280rpx;
  height:200rpx;
}

.kind-info{
  padding-left:12rpx;
}
.kind-info .title{
  font-size: 32rpx;
  color:#111;
  font-weight: bold;
  line-height: 80rpx;
}