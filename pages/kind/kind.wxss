/* pages/kind/kind.wxss */

page {
  height: 100%;
  background: #222;
}

.kind {
  height: 100%;
  overflow: hidden;
}

.item {
  background: #fff;
  margin: 10rpx 20rpx;
  border-radius: 2px;
  overflow: hidden;
  height: 180rpx;
  display: flex;
}

.kind-img {
  width: 280rpx;
  height: 200rpx;
}

.kind-info {
  width: 430rpx;
  padding-left: 12rpx;
  position: relative;
}

.kind-info .title {
  font-size: 32rpx;
  color: #111;
  font-weight: bold;
  margin-top:20rpx;
  display: block;
}

.kind-info .album-name{
  font-size: 28rpx;
  color:#666;
}

.kind-info .count {
  font-size: 120rpx;
  color: #eee;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

