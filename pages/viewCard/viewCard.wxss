/**index.wxss**/

page {
  height: 100%;
  background: #111;
  overflow: hidden;
}

.container {
  margin-top: -47rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.showImg {
  width: 100%;
  height: 900rpx;
}

.tool-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 94rpx;
  background: #fff;
  border-top: 1px solid #efefef;
  z-index: 5;
}

.tool-bar .btn {
  width: 49.5%;
  float: left;
  line-height: 92rpx;
  font-size: 24rpx;
  text-align: center;
  border-right: 1px solid #efefef;
}

.tool-bar .btn image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top: -2rpx;
}
