/* pages/about/about.wxss */

page {
  height: 100%;
  overflow: hidden;
  width: 100%;
}

.bg {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.info-con {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.85);
  overflow: hidden;
}

.personal-info {
  background: #fff;
  position: relative;
  margin: 160rpx 60rpx 0;
  border-radius: 20rpx;
  padding-bottom: 40rpx;
}

.personal-info .me {
  position: relative;
  top: -80rpx;
  display: block;
  margin: 0 auto -60rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.personal-info .name {
  font-size: 40rpx;
  color: #111;
  display: block;
  font-weight: bold;
  text-align: center;
}

.profession {
  display: block;
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 60rpx;
}

.info {
  display: block;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.contact-way{
  margin-top:40rpx;
  border-top:2px solid #ddd;
}
.contact-way .way{
  font-size: 26rpx;
  margin:0 50rpx;
  border-bottom:1px solid #ddd;
  line-height: 80rpx;
  overflow: hidden;
}

.contact-way .way .tit{
  color:#4963ae;
  float: left;
}
.contact-way .way .text{
  float: right;
  color: #666;
}